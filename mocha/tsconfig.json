{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["mocha", "chai", "jsdom", "sinon"]
	},
	"include": ["tests/**/*.ts", "tests/**/*.tsx"]
}
